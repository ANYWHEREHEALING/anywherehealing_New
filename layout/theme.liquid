<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{ page_title }} – {{ shop.name }}</title>
    <meta name="description" content="Discover revolutionary healing devices powered by cutting-edge bioresonance technology. Enhance your well-being naturally.">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% comment %} Shopify injects required scripts {% endcomment %}
    {{ content_for_header }}

    <link rel="icon" type="image/png" href="{{ 'favicon.png' | asset_url }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css">
    <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">

    <meta property="og:title" content="{{ page_title }} — {{ shop.name }}">
    <meta property="og:description" content="Discover revolutionary healing devices powered by bioresonance technology.">
    <meta property="og:image" content="{{ 'logo.png' | asset_url }}">
    <meta property="og:url" content="{{ canonical_url }}">
  </head>
  <body>
    {% section 'header' %}
    {{ content_for_layout }}
    {% section 'footer' %}
    <script src="{{ 'theme.js' | asset_url }}" defer></script>
  </body>
</html>
