      modal.appendChild(modalContent);
      document.body.appendChild(modal);

      document.getElementById('close-modal').addEventListener('click', () => modal.remove());
      modal.addEventListener('click', (e) => { if (e.target === modal) modal.remove(); });

      if (cart.lineItems && cart.lineItems.length > 0) {
        document.getElementById('checkout-btn').addEventListener('click', async () => {
          const activeTab = document.querySelector('.tab-button.active');
          const productType = (activeTab && activeTab.getAttribute('data-product')) || '1';
          window.__ahProductType = productType;

          // Gate: collect lead + try to stamp attributes + notify AH (best-effort)
          try {
            await ahEnsureLeadAndAttributes(this.client, this.cartId);
          } finally {
            // ALWAYS continue to Shopify checkout after user submits valid info
            modal.remove();
            this.openShopifyCheckout();
          }
        });
      }

      document.querySelectorAll('.qty-btn').forEach(btn => {
        btn.addEventListener('click', async (e) => {
          const lineId = e.currentTarget.dataset.lineId;
          const action = e.currentTarget.dataset.action;
          const item = cart.lineItems.find(item => item.id === lineId);
          if (item) {
            const newQuantity = action === 'increase' ? item.quantity + 1 : item.quantity - 1;
            await this.updateQuantity(lineId, newQuantity);
            modal.remove();
            setTimeout(() => this.showCartModal(), 100);
          }
        });
      });
      document.querySelectorAll('.remove-btn').forEach(btn => {
        btn.addEventListener('click', async (e) => {
          const lineId = e.currentTarget.dataset.lineId;
          await this.removeFromCart(lineId);
          modal.remove();
          setTimeout(() => this.showCartModal(), 100);
        });
      });
    }
    async openShopifyCheckout() {
      if (!this.cartId) return;
      try {
        const cart = await this.client.checkout.fetch(this.cartId);
        window.location.href = cart.webUrl;
      } catch (error) { console.error('Error opening checkout:', error); }
    }
    updateCartUI(cart) {
      const cartCount = document.querySelector('.shopify-cart-count');
      if (cartCount && cart.lineItems) {
        const totalItems = cart.lineItems.reduce((sum, item) => sum + item.quantity, 0);
        cartCount.textContent = totalItems.toString();
      }
    }
    showNotification(message) {
      const n = document.createElement('div');
      n.style.cssText = `position:fixed;top:20px;right:20px;background:#2596be;color:white;padding:15px 20px;border-radius:8px;z-index:10000;font-weight:600;box-shadow:0 4px 20px rgba(0,0,0,.1);font-family:var(--base-font);`;
      n.textContent = message; document.body.appendChild(n);
      setTimeout(() => { if (document.body.contains(n)) document.body.removeChild(n); }, 3000);
    }
  }

  // Inicializar carrito Shopify
  window.shopifyCart = new ShopifyCart();
});
</script>
