type ProductKey = 'alpha' | 'charisma' | 'frequana' | 'bundle';
type ProductImage = { src: string; alt: string };

function updateProductImages(productKey: ProductKey) {
	const images: ProductImage[] | undefined = productData[productKey]?.images;
	
	const mainImage = document.getElementById('main-product-image') as HTMLImageElement | null;
	const thumbnailGrid = document.getElementById('thumbnail-grid') as HTMLElement | null;

	if (!images || !mainImage || !thumbnailGrid) return;
	
	// Update main image
	mainImage.src = images[0].src;
	mainImage.alt = images[0].alt;
	
	// Clear and update thumbnail grid
	thumbnailGrid.innerHTML = '';
	
	// Función para obtener el tamaño correcto según el viewport
	function getThumbnailSize() {
		const width = window.innerWidth;
		if (width <= 320) return '50px';
		if (width <= 375) return '55px';
		if (width <= 480) return '60px';
		if (width <= 768) return '70px';
		return '80px'; // Desktop
	}
	
	// Función para obtener el gap correcto según el viewport
	function getThumbnailGap() {
		const width = window.innerWidth;
		if (width <= 320) return '6px';
		if (width <= 480) return '8px';
		return '12px'; // Tablet y desktop
	}
	
	images.forEach((image: ProductImage, index: number) => {
		const thumbnail = document.createElement('img');
		thumbnail.className = `thumbnail ${index === 0 ? 'active' : ''}`;
		thumbnail.src = image.src;
		thumbnail.alt = image.alt;
		thumbnail.dataset.main = image.src;
		
		// Aplicar estilos responsivos
		const size = getThumbnailSize();
		thumbnail.style.width = size;
		thumbnail.style.height = size;
		thumbnail.style.minWidth = size;
		thumbnail.style.minHeight = size;
		thumbnail.style.maxWidth = size;
		thumbnail.style.maxHeight = size;
		thumbnail.style.objectFit = 'cover';
		thumbnail.style.borderRadius = '8px';
		thumbnail.style.cursor = 'pointer';
		thumbnail.style.border = index === 0 ? '2px solid #2596be' : '2px solid transparent';
		thumbnail.style.display = 'block';
		thumbnail.style.flexShrink = '0';
		thumbnail.style.boxSizing = 'border-box';
		
		// Add click event for thumbnails
		thumbnail.addEventListener('click', function(this: HTMLImageElement) {
			thumbnailGrid.querySelectorAll('.thumbnail').forEach(t => {
				(t as HTMLImageElement).classList.remove('active');
				(t as HTMLImageElement).style.border = '2px solid transparent';
			});
			
			this.classList.add('active');
			this.style.border = '2px solid #2596be';
			
			mainImage.src = this.dataset.main || '';
			mainImage.alt = this.alt;
		});
		
		thumbnailGrid.appendChild(thumbnail);
