function initializeFinancingModal() {
    const modal = document.getElementById('financing-modal');
    const closeBtn = document.getElementById('close-financing-modal');
    const howFoundUsSelect = document.getElementById('how-found-us');
    const otherSourceGroup = document.getElementById('other-source-group');
    
    // Bind events to all financing buttons
    const financingButtons = document.querySelectorAll('.pricing-cta, .cta-secondary, button[class*="secondary"]');
    financingButtons.forEach(button => {
        // Only bind to buttons with financing-related text
        const buttonText = button.textContent.toLowerCase();
        if (buttonText.includes('monthly') || buttonText.includes('financing') || buttonText.includes('payment')) {
            button.addEventListener('click', (e) => {
                e.preventDefault();
                openFinancingModal();
            });
        }
    });

    // Close modal events
    if (closeBtn) {
        closeBtn.addEventListener('click', closeFinancingModal);
    }
    
    if (modal) {
        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                closeFinancingModal();
            }
        });
    }

    // ESC key to close
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal && modal.style.display === 'block') {
            closeFinancingModal();
        }
    });

    // Show/hide "other" source field
    if (howFoundUsSelect && otherSourceGroup) {
        howFoundUsSelect.addEventListener('change', function() {
            if (this.value === 'other') {
                otherSourceGroup.style.display = 'block';
            } else {
                otherSourceGroup.style.display = 'none';
                const otherSourceInput = document.getElementById('other-source');
                if (otherSourceInput) {
                    otherSourceInput.value = '';
                }
            }
        });
    }

    // Form submission
    const financingForm = document.getElementById('financingForm');
    if (financingForm) {
        financingForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            await handleFinancingFormSubmission(this);
        });
    }

    function openFinancingModal() {
        if (modal) {
            modal.style.display = 'block';
            document.body.style.overflow = 'hidden'; // Prevent background scroll
            console.log('üí∞ Financing modal opened');
        }
    }

    function closeFinancingModal() {
        if (modal) {
            modal.style.display = 'none';
            document.body.style.overflow = 'auto'; // Restore scroll
        }
    }

    async function handleFinancingFormSubmission(form) {
        const feedback = document.getElementById('financing-form-feedback');
        const submitBtn = document.querySelector('.financing-submit-btn');
        
        if (submitBtn) {
            submitBtn.innerHTML = 'Processing Request...';
            submitBtn.disabled = true;
        }
        
        try {
            const response = await fetch('/', {
                method: 'POST',
                headers: { "Content-Type": "application/x-www-form-urlencoded" },
                body: new URLSearchParams(new FormData(form)).toString()
            });
            
            if (response.ok) {
                if (feedback) {
                    feedback.innerHTML = `
                        <div style="background: #d4edda; color: #155724; padding: 25px; border-radius: 15px; text-align: center; border: 2px solid #c3e6cb;">
                            <h3 style="margin: 0 0 15px 0; font-size: 1.5rem;">‚úÖ Request Submitted Successfully!</h3>
                            <p style="margin: 0; font-size: 1.1rem; line-height: 1.5;">Thank you for your interest in financing. Our team will review your request and send you all the necessary documentation within 24-48 hours. Check your email for updates!</p>
                        </div>
                    `;
                    feedback.style.display = 'block';
                }
                form.reset();
                if (submitBtn) {
                    submitBtn.style.display = 'none';
                }
                
                // Auto-close modal after 5 seconds
                setTimeout(() => {
                    closeFinancingModal();
                }, 5000);
            }
        } catch (error) {
            console.error('Error submitting financing form:', error);
            if (feedback) {
                feedback.innerHTML = `
                    <div style="background: #f8d7da; color: #721c24; padding: 20px; border-radius: 10px; text-align: center;">
                        ‚ùå Something went wrong. Please try again or contact us directly at admin@anywherehealing.com
                    </div>
                `;
                feedback.style.display = 'block';
            }
            if (submitBtn) {
                submitBtn.innerHTML = 'Try Again';
                submitBtn.disabled = false;
            }
        }
    }
}
