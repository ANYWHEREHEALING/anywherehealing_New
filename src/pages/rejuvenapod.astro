document.addEventListener('DOMContentLoaded', function() {
    const images = document.querySelectorAll('img[data-src]');
    
    const imageObserver = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const img = entry.target;
                img.src = img.dataset.src;
                img.removeAttribute('data-src');
                imageObserver.unobserve(img);
            }
        });
    });
    
    images.forEach(img => imageObserver.observe(img));
});

// ============ SHOPIFY CART INTEGRATION ============
document.addEventListener('DOMContentLoaded', function() {
    
    class ShopifyCart {
        constructor() {
            this.client = null;
            this.cartId = null;
            this.init();
        }

        async init() {
            // Wait for Shopify client to be ready
            if (typeof ShopifyBuy !== 'undefined' && window.SHOPIFY_CLIENT) {
                this.client = window.SHOPIFY_CLIENT;
                await this.getOrCreateCart();
                this.bindEvents();
                console.log('‚úÖ Shopify Cart API initialized for RejuvenaPod');
            } else {
                setTimeout(() => this.init(), 500);
            }
        }

        async getOrCreateCart() {
            // Try to retrieve existing cart
            const savedCartId = localStorage.getItem('shopify-cart-id');
            
            if (savedCartId) {
                try {
                    const cart = await this.client.checkout.fetch(savedCartId);
                    if (!cart.completedAt) {
                        this.cartId = savedCartId;
                        this.updateCartUI(cart);
                        return;
                    }
                } catch (error) {
                    console.log('Previous cart not valid, creating new one');
                }
            }

            // Create new cart
            const cart = await this.client.checkout.create();
            this.cartId = cart.id;
            localStorage.setItem('shopify-cart-id', this.cartId);
            this.updateCartUI(cart);
        }

        bindEvents() {
            document.querySelectorAll('.shopify-add-item').forEach(button => {
                button.addEventListener('click', async (e) => {
                    e.preventDefault();
                    const variantId = e.target.dataset.variantId;
                    const title = e.target.dataset.productTitle;
                    const quantity = 1;
                    
                    await this.addToCart(variantId, quantity, title);
                });
            });

            const cartButton = document.querySelector('.shopify-checkout');
            if (cartButton) {
                cartButton.addEventListener('click', (e) => {
                    e.preventDefault();
                    this.openShopifyCheckout();
                });
            }
        }

        async addToCart(variantId, quantity, title) {
            try {
                const lineItemsToAdd = [{
                    variantId: `gid://shopify/ProductVariant/${variantId}`,
                    quantity: quantity
                }];

                const cart = await this.client.checkout.addLineItems(this.cartId, lineItemsToAdd);
                this.updateCartUI(cart);
                this.showNotification(`${title} added to cart`);
                
            } catch (error) {
                console.error('Error adding to cart:', error);
                this.showNotification('Error adding product to cart');
            }
        }

        async openShopifyCheckout() {
            if (this.cartId) {
                try {
                    const cart = await this.client.checkout.fetch(this.cartId);
                    // Redirect to real Shopify checkout
                    window.location.href = cart.webUrl;
                } catch (error) {
                    console.error('Error opening checkout:', error);
                }
            }
        }

        updateCartUI(cart) {
            const cartCount = document.querySelector('.shopify-cart-count');
            if (cartCount && cart.lineItems) {
                const totalItems = cart.lineItems.reduce((sum, item) => sum + item.quantity, 0);
                cartCount.textContent = totalItems.toString();
            }
        }

        showNotification(message) {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed; top: 20px; right: 20px; background: #2596be; color: white;
                padding: 15px 20px; border-radius: 8px; z-index: 10000; font-weight: 600;
                box-shadow: 0 4px 20px rgba(0,0,0,0.1); font-family: var(--base-font);
            `;
            notification.textContent = message;
            document.body.appendChild(notification);
            setTimeout(() => {
                if (document.body.contains(notification)) {
                    document.body.removeChild(notification);
                }
            }, 3000);
        }
    }

    // Initialize Shopify cart
    window.shopifyCart = new ShopifyCart();
});

