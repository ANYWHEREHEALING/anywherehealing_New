		color: white;
		position: relative;
		overflow: hidden;

		&::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: radial-gradient(circle at 50% 50%, rgba(37, 150, 190, 0.1) 0%, transparent 70%);
			pointer-events: none;
		}

		.container {
			position: relative;
			z-index: 2;
		}

		.features-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
			gap: 60px;
			margin-bottom: 80px;
		}

		.feature-card {
			text-align: center;
			padding: 40px 30px;
			background: rgba(255, 255, 255, 0.02);
			border-radius: 24px;
			backdrop-filter: blur(10px);
			border: 1px solid rgba(255, 255, 255, 0.1);
			transition: all 0.4s ease;
			position: relative;
			overflow: hidden;

			&::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(37, 150, 190, 0.1), transparent);
				transition: left 0.6s ease;
			}

			&:hover::before {
				left: 100%;
			}

			&:hover {
				transform: translateY(-10px);
				border-color: rgba(37, 150, 190, 0.3);
				box-shadow: 0 20px 40px rgba(37, 150, 190, 0.2);
			}
		}

