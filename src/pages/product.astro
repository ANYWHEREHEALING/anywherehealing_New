---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Import product images
import HeroProduct from '../assets/hero-product.jpg';
import ProductShowcase1 from '../assets/product-showcase-1.jpg';
import ProductShowcase2 from '../assets/product-showcase-2.jpg';
import ProductShowcase3 from '../assets/product-showcase-3.jpg';
import ProductCloseUp from '../assets/product-close-up.jpg';
