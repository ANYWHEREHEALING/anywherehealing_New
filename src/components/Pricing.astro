<style lang="scss">
/* ---------- Alignment variables ---------- */
:root{
  --space-0: 4px;
  --space-1: 8px;
  --space-2: 12px;
  --space-3: 16px;
  --space-4: 20px;
  --space-5: 28px;
  --space-6: 36px;

  /* Key alignment knobs (tweak if copy changes) */
  --header-min: 220px;     /* keeps title/chips/note area consistent */
  --quickuse-min: 180px;   /* keeps the blue “Use this if you want” box aligned */
  --card-gap: var(--space-3);
  --text-max: 58ch;
}

.pricing-table{ background:#fff; line-height:1.65; letter-spacing:.01em; }
.pricing-table .container{ max-width:1200px; margin:0 auto; padding:0 16px; box-sizing:border-box; }

/* Top grid of cards */
.pricing-table .row{
  display:grid;
  grid-template-columns:repeat(3, minmax(0,1fr));
  gap: var(--space-6);
}
.pricing-table .row > .column,
.pricing-table .row > .one-third{ float:none!important; width:auto!important; max-width:none!important; margin-left:0!important; box-sizing:border-box; }

/* ----- Card as a grid: image / header / quick-use / features ----- */
.price-item{
  border:1px solid #dde2e5;
  border-radius:22px;
  background:#fff;
  padding:var(--space-6);
  display:grid;
  grid-template-rows: auto /* image */ auto /* header */ auto /* quick-use */ 1fr /* features fill */;
  gap: var(--card-gap);
}

/* image */
.product-image{ text-align:center; }
.product-img{
  width:80px!important; height:80px!important; object-fit:cover;
  border-radius:14px!important; border:1px solid #ddd;
  transition:transform .3s ease; display:block; margin:0 auto;
}
.product-img:hover{ transform:scale(1.1); }

/* header */
.price-header{
  display:grid;
  grid-template-rows: 1fr auto auto; /* header-top stretches; price + button lock to bottom */
  gap: 10px;
  min-height: var(--header-min);
}
.header-top{ display:flex; flex-direction:column; gap:8px; }

.price{
  display:inline-flex; align-items:flex-end; gap:8px;
}
.price .amount{
  font-size:2.6rem; font-weight:800; line-height:1; letter-spacing:-0.02em;
  font-variant-numeric: tabular-nums;
}
.price .currency{
  font-size:.9rem; line-height:1; margin-bottom:6px; color:#6b7280;
  text-transform:uppercase; font-weight:700; letter-spacing:.02em;
}
.price-actions{ margin-top:4px; }

/* chips + note */
.sensor-chips{ display:flex; gap:10px; flex-wrap:wrap; }
.sensor-chips .chip{ padding:6px 10px; border-radius:9999px; border:1px solid #e2e8f0; font-size:.8rem; font-weight:600; background:#f8fafc; }
.sensor-note{ color:#6b7280; font-size:.9rem; }

/* quick-use box (kept same height across cards) */
.quick-use{
  background:#f7fbff; border:1px solid #dceeff; border-radius:12px;
  padding:var(--space-3);
  min-height: var(--quickuse-min);
  display:flex; flex-direction:column;
}
.quick-use ul{ margin:var(--space-1) 0 0 18px; }
.quick-use li{ margin:8px 0; }

/* features list */
.price-list{ max-width: var(--text-max); align-self:stretch; }
.price-list p{
  margin:12px 0; position:relative; padding-left:22px; font-size:14px; line-height:1.6;
}
.price-list p::before{
  position:absolute; content:''; left:0; top:5px; transform:rotate(45deg);
  height:8px; width:5px; border-bottom:2px solid #9ba5b9; border-right:2px solid #9ba5b9;
}

/* featured card pop */
.price-item.featured{ box-shadow:0 10px 24px rgba(0,0,0,0.06); transform:translateY(-6px); }

/* buttons */
.price-item .button{ padding:0 22px; }
.price-item .button:hover{ color:#333!important; }
.price-item .button.button-primary:hover{ color:#fff!important; }

.buttonbuyall{ margin-top:54px; margin-bottom:80px; }

/* comparison bar */
.compare-bar{
  display:grid; grid-template-columns:repeat(3,1fr); gap:var(--space-2);
  border:1px solid #e5e7eb; border-radius:16px; padding:var(--space-3); margin:20px 0 36px; background:#fafafa;
}
.compare-pill{ background:#fff; border:1px solid #e5e7eb; border-radius:12px; padding:var(--space-3); display:flex; flex-direction:column; gap:var(--space-1); }
.compare-pill.featured{ box-shadow:0 8px 18px rgba(0,0,0,.05); transform:translateY(-2px); }
.compare-title{ font-weight:700; }
.compare-sub{ font-size:.9rem; color:#2563eb; font-weight:700; }
.compare-pill ul{ margin:0; padding-left:18px; }
.compare-pill li{ margin:6px 0; font-size:.95rem; }

/* modal (unchanged) */
.image-modal{ display:none; position:fixed; z-index:10000; inset:0; background-color:rgba(0,0,0,.9); backdrop-filter:blur(5px); }
.image-modal.active{ display:flex; justify-content:center; align-items:center; padding:20px; }
.image-modal .modal-content{ position:relative; width:100%; height:100%; display:flex; justify-content:center; align-items:center; }
.image-modal .close-button{ position:fixed; top:20px; right:20px; color:#fff; font-size:40px; font-weight:bold; cursor:pointer; z-index:10001; transition:all .3s ease; background:rgba(0,0,0,.5); border-radius:50%; width:60px; height:60px; display:flex; align-items:center; justify-content:center; }
.image-modal .close-button:hover{ color:#ccc; background:rgba(0,0,0,.7); transform:scale(1.1); }
.image-modal img{ max-width:calc(100vw - 40px); max-height:calc(100vh - 40px); width:auto; height:auto; object-fit:contain; border-radius:15px; box-shadow:0 20px 40px rgba(0,0,0,.3); transition:opacity .3s ease; }

/* responsive alignment knobs */
@media (max-width: 1024px){
  :root{ --header-min: 210px; --quickuse-min: 170px; }
  .pricing-table .row{ gap: var(--space-5); }
}
@media (max-width: 920px){
  .pricing-table .row{ grid-template-columns:1fr; }
  :root{ --header-min: 190px; --quickuse-min: 160px; }
}
@media (max-width: 768px){
  :root{ --header-min: 180px; --quickuse-min: 150px; }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const modal = document.getElementById('imageModal');
  const modalImg = document.getElementById('modalImage');
  const closeBtn = document.querySelector('.close-button');
  let isModalOpen = false;

  function openModal(src, alt){
    if(isModalOpen) return;
    modalImg.src = src; modalImg.alt = alt;
    modal.classList.add('active'); document.body.style.overflow = 'hidden'; isModalOpen = true;
  }
  function closeModal(){
    if(!isModalOpen) return;
    modal.classList.remove('active'); document.body.style.overflow = ''; isModalOpen = false;
    setTimeout(()=>{ if(!isModalOpen) modalImg.src=''; }, 300);
  }

  document.addEventListener('click', function(e){
    if(e.target.classList.contains('product-img')){
      e.preventDefault(); openModal(e.target.src, e.target.alt);
    }
  });
  closeBtn.addEventListener('click', closeModal, { passive:true });
  document.getElementById('imageModal').addEventListener('click', function(e){ if(e.target === this) closeModal(); }, { passive:true });

  let escapeTimeout;
  document.addEventListener('keydown', function(e){
    if(e.key === 'Escape' && isModalOpen){
      if(escapeTimeout) return;
      escapeTimeout = setTimeout(()=>{ closeModal(); escapeTimeout = null; }, 100);
    }
  });
});
</script>
